#! /bin/bash
echo ""
echo "------------------------------------ Building ------------------------------------"
echo ""


ARCH=$(uname -m)
CMAKE_OPTIONS="-DARCH_DIR=$ARCH"

catkin_make --cmake-args $CMAKE_OPTIONS

if [ $? -eq 0 ]; then
    echo ""
	echo "--------------------------------- Building Tests ---------------------------------"
	echo ""
	
	catkin_make tests --cmake-args $CMAKE_OPTIONS
	
	if [ $? -eq 0 ]; then
		echo ""
		echo "--------------------------------- Build Succeeded --------------------------------"
		echo ""
		exit 0
	else
		echo ""
		echo "------------------------------- Building Tests Failed ----------------------------"
		echo ""
		exit 1
	fi
else
	echo ""
	echo "---------------------------------- Build Failed ----------------------------------"
	echo ""
	exit 1
fi

. ./devel/setup.sh
